generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////////////////////
// ORDER STATUS (справочник)
//////////////////////////////////////////////////////

model OrderStatus {
  id     String  @id @default(uuid())
  code   String  @unique   // CREATED, PICKING, PAYMENT, DELIVERY, CLOSED, CANCELLED
  name   String            // Человекочитаемое название

  orders Order[]
}

//////////////////////////////////////////////////////
// ABSENCE RESOLUTION STRATEGY (справочник)
//////////////////////////////////////////////////////

model AbsenceResolutionStrategy {
  id     String  @id @default(uuid())
  code   String  @unique   // CALL_REPLACE, CALL_REMOVE, AUTO_REPLACE, AUTO_REMOVE
  name   String            // Человекочитаемое название

  orders Order[]
}

//////////////////////////////////////////////////////
// USER ROLE (справочник, FK через code-as-PK)
//////////////////////////////////////////////////////

model UserRole {
  code  String @id  // CUSTOMER, STAFF, ADMIN
  name  String      // Человекочитаемое название

  users User[]
}

//////////////////////////////////////////////////////
// PAYMENT STATUS (если нужна симметрия)
//////////////////////////////////////////////////////

model PaymentStatus {
  id     String  @id @default(uuid())
  code   String  @unique   // PENDING, SUCCESS, FAILED
  name   String

  payments Payment[]
}

//////////////////////////////////////////////////////
// USER
//////////////////////////////////////////////////////

model User {
  id        String  @id @default(uuid())
  phone     String
  email     String  @unique
  address   String?
  role      String    @default("CUSTOMER")
  userRole  UserRole  @relation(fields: [role], references: [code])

  orders        Order[]
  cartItems     CartItem[]
  refreshTokens RefreshToken[]
}

//////////////////////////////////////////////////////
// EMAIL OTP
//////////////////////////////////////////////////////

model EmailOtp {
  id        String   @id @default(uuid())
  email     String
  code      String        // plain text, 6 цифр
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

//////////////////////////////////////////////////////
// REFRESH TOKEN
//////////////////////////////////////////////////////

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

//////////////////////////////////////////////////////
// CATEGORY
//////////////////////////////////////////////////////

model Category {
  id        String      @id @default(uuid())
  name      String
  imagePath String?
  parentId  String?

  parent    Category?   @relation("CategoryToCategory", fields: [parentId], references: [id])
  children  Category[]  @relation("CategoryToCategory")

  products  Product[]
}

//////////////////////////////////////////////////////
// PRODUCT
//////////////////////////////////////////////////////

model Product {
  id         String   @id @default(uuid())
  name       String
  article    String
  price      Decimal  @db.Decimal(10, 2)
  stock      Int

  imagePath  String?  // путь к изображению

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  cartItems  CartItem[]
  orderItems OrderItem[]
}


//////////////////////////////////////////////////////
// CART
//////////////////////////////////////////////////////

model CartItem {
  id        String @id @default(uuid())

  userId    String
  user      User   @relation(fields: [userId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])

  quantity  Int

  @@unique([userId, productId])
}

//////////////////////////////////////////////////////
// ORDER
//////////////////////////////////////////////////////

model Order {
  id          String   @id @default(uuid())

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  statusId    String
  status      OrderStatus @relation(fields: [statusId], references: [id])

  totalAmount Decimal  @db.Decimal(10, 2)

  deliveryAt  DateTime?
  address     String
  absenceResolutionStrategyId String
  absenceResolutionStrategy   AbsenceResolutionStrategy @relation(fields: [absenceResolutionStrategyId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       OrderItem[]
  payments    Payment[]
}

//////////////////////////////////////////////////////
// ORDER ITEM
//////////////////////////////////////////////////////

model OrderItem {
  id        String  @id @default(uuid())

  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  name      String
  article   String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int
}

//////////////////////////////////////////////////////
// OUTBOX EVENT
//////////////////////////////////////////////////////

model OutboxEvent {
  id           String    @id @default(uuid())
  eventType    String    // "ORDER_DELIVERED"
  payload      Json
  createdAt    DateTime  @default(now())
  processedAt  DateTime?
  failedAt     DateTime? // проставляется при исчерпании попыток или бизнес-ошибке
  errorMessage String?   // причина сбоя (артикулы / текст ошибки)
  retryCount   Int       @default(0)
}

//////////////////////////////////////////////////////
// PAYMENT
//////////////////////////////////////////////////////

model Payment {
  id              String   @id @default(uuid())

  orderId         String
  order           Order    @relation(fields: [orderId], references: [id])

  statusId        String
  status          PaymentStatus @relation(fields: [statusId], references: [id])

  externalId      String?
  amount          Decimal  @db.Decimal(10, 2)

  createdAt       DateTime @default(now())
}
